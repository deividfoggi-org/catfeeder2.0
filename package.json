  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node-cron": "^3.0.11",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/raspberry-pi-app.git"
  },
  "keywords": [
